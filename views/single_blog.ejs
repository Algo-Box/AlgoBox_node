<%- include('partials/index') %>

<style>
	body {
		font-family: "Roboto", sans-serif;
		font-size: 18px;
		background-color: #fdfdfd;
	}
	.head_text{
		color: white;
	}
	.card{
		box-shadow: 0 16px 48px #E3E7EB;
		border-radius: 20px !important;

	}
	.another_card
	{
		width: 150% !important;
	}

</style>

<%- include('partials/header') %>

<div class="container">
	<div class="row">
		<!-- Blog Entries Column -->
		<div class="col-md-8 mt-3 left">
			<div class="card another_card" style="width:100%;">
				<div class="card-body">
					<h2 class="card-title"><%- post.title %></h2>
					<p class="card-text text-muted h6"><strong>Post by: </strong><a href="/users/<%- post.author %>"><%- post.author %></a> </p> 
					<p class="card-text text-muted h6"><strong>Created on: </strong><%- post.created %> </p>			
					<p class="card-text"><%- post.body %></p>
				</div>
			</div>
    </div>
	</div>
</div>
