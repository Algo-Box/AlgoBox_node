<style>
    .card{
      box-shadow: 0 16px 48px #E3E7EB;
      width: 160%;
    }
    .contest-list ul{
      height: 250px;
      width: 100%;
      overflow:hidden; 
      overflow-y:scroll;
    }
    .my_card
    {
      width: 120% !important;
    }

  </style>
  
  <!-- Sidebar Widgets Column -->
  <div class="col-md-4 float-right ">
    <div class="card my-4 my_card">
      <h5 class="card-header">Participate!</h5>
      <div class="card-body">
        <p class="card-text"> All programming contests, right here!</p>
        <nav class="contest-list">
          <% if (typeof contestList !== 'undefined') {%>
          <ul>
            <% for (let i = 0; i < contestList.length; ++i) {%>
            <a href="<%- contestList[i].href %>"><li> <%- contestList[i].event %> </li></a> 
            <%} %>
          <%} %>
          </ul>
        </nav>
      </div>
    </div>
  </div>